{
  "name": "oprol-tela",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "18.x",
    "pnpm": "<=8.0.0"
  },
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --check './{bin,lib,src,tests}/**/*.{ts,tsx}'",
    "typecheck": "tsc -p . --noEmit",
    "create:post": "node ./apps/web/src/lib/util/post/generate-post.mjs"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.6",
    "@types/node": "17.0.35",
    "eslint": "8.16.0",
    "prettier": "^2.8.8",
    "scaffdog": "2.5.0",
    "turbo": "^1.10.12",
    "typescript": "^4.7.2"
  }
}
